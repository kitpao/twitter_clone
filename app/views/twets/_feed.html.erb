<div class='column is-half'>
  <article class='media box'>
    <figure class='media-left'>
      <p class='image is-64x64'>
        <img src='https://bulma.io/images/placeholders/64x64.png' alt='exampleImage'>
      </p>
    </figure>
    <div class='media-content'>
      <%= render 'twets/form' %>
    </div>
  </article>
  <% @twets.each do | twet | %>
    <div class='box'>
      <article class='media'>
        <div class='media-left'>
          <figure class='image is-64x64'>
            <img src='https://bulma.io/images/placeholders/64x64.png' alt='exampleImage'>
          </figure>
        </div>
        <div class='media-content'>
          <div class='content'>
            <strong>Kitpao</strong><br>
            <small>@kitpao1</small><br>
            <p><%= twet.twet%></p>
          </div>
          <nav class='level'>
            <div class='level-left is-mobile'>
              <%= link_to twet, class: 'level-item' do %>
                <span class='icon'>
                  <i class='fa fa-link' aria-hidden='true'></i>
                </span>
              <% end %>
              <%= link_to edit_twet_path(twet), class: 'level-item' do %>
                <span class='icon'>
                  <i class='fa fa-pencil' aria-hidden='true'></i>
                </span>
              <% end %>
              <%= link_to twet, method: :delete, data: { confirm: 'Are you sure?' }, class: 'level-item' do %>
                <span class='icon'>
                  <i class='fa fa-trash-o' aria-hidden='true'></i>
                </span>
              <% end %>
            </div>
          </nav>

        </div>
      </article>
    </div>
  <% end %>
</div>
