<div class='column is-half'>
  <% if user_signed_in? %>
  <article class='media box'>
    <figure class='media-left'>
      <p class='image is-64x64'>
        <%= gravatar_image_tag(current_user.email, size: 64, alt: current_user.name) %>
      </p>
    </figure>
    <div class='media-content'>
      <%= render 'twets/form' %>
    </div>
  </article>
  <% end %>

  <% @twets.each do | twet | %>
    <div class='box'>
      <article class='media'>
        <div class='media-left'>
          <figure class='image is-64x64'>
            <%= gravatar_image_tag(twet.user.email, size: 64, alt: twet.user.name) %>
          </figure>
        </div>
        <div class='media-content'>
          <div class='content'>
            <strong><%= twet.user.name %></strong><br>
            <small>@<%= twet.user.username %></small><br>
            <p><%= twet.twet%></p>
          </div>
          <% if user_signed_in? %>
          <nav class='level'>
            <div class='level-left is-mobile'>
              <%= link_to twet, class: 'level-item' do %>
                <span class='icon'>
                  <i class='fa fa-link' aria-hidden='true'></i>
                </span>
              <% end %>
              <%= link_to edit_twet_path(twet), class: 'level-item' do %>
                <span class='icon'>
                  <i class='fa fa-pencil' aria-hidden='true'></i>
                </span>
              <% end %>
              <%= link_to twet, method: :delete, data: { confirm: 'Are you sure?' }, class: 'level-item' do %>
                <span class='icon'>
                  <i class='fa fa-trash-o' aria-hidden='true'></i>
                </span>
              <% end %>
            </div>
          </nav>
          <% end %>
        </div>
      </article>
    </div>
  <% end %>
</div>
